{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"playlists": {
			"type": "array",
			"items": [
				{
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"minLength": 1,
							"maxLength": 100
						},
						"time": {
							"type": "string",
							"pattern": "(@(annually|yearly|monthly|weekly|daily|hourly|reboot))|(@every (\\d+(ns|us|Âµs|ms|s|m|h))+)|((((\\d+,)+\\d+|(\\d+(\\/|-)\\d+)|\\d+|\\*) ?){5,7})"
						},
						"sources": {
							"type": "array",
							"items": [
								{
									"type": "object",
									"properties": {
										"id": {
											"type": "string",
											"pattern": "^\\S{22}$"
										},
										"type": {
											"type": "string",
											"enum": [
												"artist",
												"song",
												"playlist",
												"show"
											]
										},
										"strategy": {
											"type": "object",
											"properties": {
												"type": {
													"type": "string",
													"enum": [
														"popular",
														"latest",
														"latestNotHeard",
														"random",
														"mostHeard"
													]
												},
												"minTimes": {
													"type": "integer",
													"minimum": 0
												},
												"maxTimes": {
													"type": "integer",
													"minimum": 1
												},
												"amount": {
													"type": "integer",
													"minimum": 1
												}
											}
										}
									},
									"required": [
										"type",
										"id",
										"strategy"
									],
									"additionalProperties": false
								}
							]
						}
					},
					"required": [
						"time",
						"name"
					],
					"additionalProperties": false
				}
			]
		}
	},
	"additionalProperties": false
}